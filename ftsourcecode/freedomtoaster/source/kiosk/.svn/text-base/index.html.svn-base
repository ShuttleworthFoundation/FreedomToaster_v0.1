// Keep the inner width and height at 1024x768, if possible
   function resizeWindow() {
   	window.moveTo(0,0);
   	wasteWidth = window.outerWidth - window.innerWidth;
   	wasteHeight = window.outerHeight - window.innerHeight;
   	newWidth = 1024 + wasteWidth;
   	newHeight = 768 + wasteHeight;
   	if (screen.width < newWidth)	newWidth = screen.width;
   	if (screen.height < newHeight)	newHeight = screen.height;
   	window.resizeTo(newWidth,newHeight);
   }

