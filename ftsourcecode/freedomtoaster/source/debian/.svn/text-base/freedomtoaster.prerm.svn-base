#! /bin/sh
 
set -e

if [ "$1" = remove ] || [ "$1" = abort-install ]; then
	# Remove "freedomtoaster.localdomain freedomtoaster" from /etc/hosts (at the end of 127.0.0.1 line)
	if grep -q freedomtoaster.localdomain /etc/hosts 2> /dev/null; then
		cp /etc/hosts /etc/~hosts
		sed -e "s%^\(127\.0\.0\.1.*\)freedomtoaster\.localdomain freedomtoaster\(.*\)$%\1\2%g" /etc/~hosts > /etc/hosts
	fi
	
	# Remove www-data ft settings from sudoers
	if grep -q "# freedomtoaster settings" /etc/sudoers 2> /dev/null; then
		cp /etc/sudoers /etc/~sudoers
		linenum=`grep -n "# freedomtoaster settings" /etc/sudoers | cut -d: -f1`
		sed -e "$linenum,$[linenum + 1]d" /etc/~sudoers > /etc/sudoers
	fi
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
